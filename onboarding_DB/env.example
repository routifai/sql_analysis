# ============================================================================
# Text2SQL Onboarding System - Environment Configuration
# ============================================================================
# Copy this file to .env and configure with your values
# This single .env file is used by both backend and frontend

# ============================================================================
# Backend API Configuration
# ============================================================================

# Admin Database Connection (where user info and catalogs are stored)
ADMIN_DB_CONNECTION=postgresql://testuser:testpass@localhost:5432/onboarding_admin

# Database Table Names (customizable)
USER_CONNECTIONS_TABLE=db_connection_infos
AUDIT_LOG_TABLE=onboarding_audit_log

# API Server Configuration
API_PORT=8001
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# ============================================================================
# Frontend Configuration
# ============================================================================

# Backend API URL (used by Next.js frontend)
NEXT_PUBLIC_API_URL=http://localhost:8001

# Frontend Port (Next.js dev server)
PORT=3001

# ============================================================================
# Optional: Security & Features (for future use)
# ============================================================================

# API Secret Key (if implementing authentication)
# API_SECRET_KEY=your-secret-key-here

# Enable debug mode
DEBUG=true

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

