# ============================================================================
# Admin Database Connection
# ============================================================================
# This is where user connection info and catalogs are stored
# The admin database should be created using setup_admin_db.py
ADMIN_DB_CONNECTION=postgresql://testuser:testpass@localhost:5432/onboarding_admin

# ============================================================================
# API Configuration
# ============================================================================
# Port for the backend API server (default: 8001)
API_PORT=8001

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# Security (Optional - for future use)
# ============================================================================
# Secret key for API authentication (if implementing auth)
# API_SECRET_KEY=your-secret-key-here

# Enable/disable debug mode
DEBUG=true

# ============================================================================
# Logging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

